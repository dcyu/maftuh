<h1>Checkpoint Update</h1>

<h2>

  <form role="form" name="input" action="/checkpoint">
    <div class="form-group">
      <label for="exampleInputEmail1">
        <input type="text" class="form-control" placeholder="Checkpoint name" name="name">
      </label>
    </div>
    <div class="radio">
      <label>
        <input type="radio" name="status" value="open"> Open
      </label>
    </div>
    <div class="radio">
      <label>
        <input type="radio" name="status" value="closed"> Closed
      </label>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>

</h2>


