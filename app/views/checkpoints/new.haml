.row
  .col-md-6.offset
    .panel.panel-info
      .panel-heading
        = t('new_checkpoint')
      .panel-body
        = form_for @checkpoint do |f|
          - if @checkpoint.errors.any?
            #error_explanation
              %h2= "#{pluralize(@checkpoint.errors.count, "error")} prohibited this checkpoint from being saved:"
              %ul
                - @checkpoint.errors.full_messages.each do |msg|
                  %li= msg

          .form-group
            = f.label :name
            = f.text_field :name, class: "form-control", placeholder: "..."

          .form-group
            %label
              = t('open_question')

            .radio
              %label
                = f.radio_button :open, "true"
                = t('yes_open')
            .radio
              %label
                = f.radio_button :open, "false"
                = t('no_open')

          = f.submit 'Create', class: " btn btn-default"